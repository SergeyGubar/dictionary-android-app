<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.dictionaryapp.android.app">

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme.NoActionBar">
        <activity android:name="com.dictionaryapp.android.app.AuthActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.dictionaryapp.android.app.AddActivity"
            android:parentActivityName="com.dictionaryapp.android.app.MainActivity" />


        <activity android:name="com.dictionaryapp.android.app.MainActivity" />
        <activity
            android:name="com.dictionaryapp.android.app.RegisterActivity"
            android:parentActivityName="com.dictionaryapp.android.app.AuthActivity" />
        <activity
            android:name="com.dictionaryapp.android.app.ForgotPasswordActivity"
            android:parentActivityName="com.dictionaryapp.android.app.AuthActivity" />
        <activity android:name="com.dictionaryapp.android.app.SettingsActivity"
            android:parentActivityName="com.dictionaryapp.android.app.MainActivity"/>

        <provider
            android:name="com.dictionaryapp.Helpers.WordsContentProvider"
            android:authorities="com.dictionaryapp.android.app"
            android:exported="false"/>
    </application>

</manifest>